
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-body">Proje Sayısı: @ViewBag.countProjeTalebi</div>
        </div>
        <br>
        <div class="card bg-primary text-white">
            <div class="card-body">Bildiğim programlama dili sayısı: @ViewBag.technologyCount</div>
        </div>
        <br>
        <div class="card bg-success text-white">
            <div class="card-body">Java dili oranı: @ViewBag.javaValue</div>
        </div>
        <br>
        <div class="card bg-info text-white">
            <div class="card-body">Toplam Mesaj Sayısı: @ViewBag.subjectTesekkur</div>
        </div>
        <br>
        <div class="card bg-warning text-white">
            <div class="card-body">Toplam Teknoloji Sayısı: @ViewBag.sumTechnologyValue</div>
        </div>
        <br>
        <div class="card bg-danger text-white">
            <div class="card-body">Ortalama Teknoloji Sayısı: @ViewBag.averageTechnologyValue</div>
        </div>
        <br>
        <div class="card bg-secondary text-white">
            <div class="card-body">3 nolu ID: @ViewBag.GetBy3ID</div>
        </div>
        <br>
        <div class="card bg-dark text-white">
            <div class="card-body">En yüksek teknolgy puanı: @ViewBag.maxTechnologyValue</div>
        </div>
        <br>
        <div class="card bg-light text-dark">
            <div class="card-body">Gelen Toplam Mesaj Sayısı: @ViewBag.contactCount</div>
        </div>
    </div>

</body>
</html>


